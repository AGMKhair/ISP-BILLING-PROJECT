<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_main_menu"
    android:padding="16dp"
    android:id="@+id/checkboxlayout"
    tools:context="com.example.sabbir.ispbilling.CheckPaymentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:text="Check the payment"
        android:textAlignment="center"
        android:textColor="#FFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">


        <Spinner
            android:padding="2dp"
            android:layout_margin="8dp"
            android:id="@+id/spinner_year"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:entries="@array/year"

            android:textAlignment="center"></Spinner>


        <Spinner
            android:padding="2dp"
            android:layout_margin="8dp"
            android:id="@+id/spinner_month"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"

            android:entries="@array/month"
            android:textAlignment="center"></Spinner>



        <Button

            android:id="@+id/Paid"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp"
            android:text="Paid"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <!--
        
                <Button
                    android:id="@+id/check_by_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Id" />
        -->

        <Button

            android:padding="2dp"
            android:layout_margin="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textSize="30dp"

            android:textStyle="bold"
            android:id="@+id/Unpaid"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Un Paid" />
        <Button
            android:padding="2dp"
            android:textSize="30dp"

            android:layout_margin="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/activeButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Active" />

        <Button
            android:padding="2dp"
            android:layout_margin="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textSize="30dp"

            android:textStyle="bold"
            android:id="@+id/inactive"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Inactive" />


    </LinearLayout>

    <ListView
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="20dp"

        android:id="@+id/check_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
