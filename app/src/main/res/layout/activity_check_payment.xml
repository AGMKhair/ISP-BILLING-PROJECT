<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_main_menu"
    android:padding="16dp"
    android:id="@+id/checkboxlayout"
    tools:context="com.example.sabbir.ispbilling.CheckPaymentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textSize="22dp"
        android:text="Check the payment"
        android:textAlignment="center"
        android:textColor="#FFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">
        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_margin="1.5dp"
            android:background="@color/colorPrimaryDark"
            android:entries="@array/year"
            android:textAlignment="center"></Spinner>

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="1.5dp"
            android:padding="1dp"
            android:entries="@array/month"
            android:textAlignment="center"></Spinner>




    <Button

        android:padding="1dp"
        android:layout_margin="1.5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/Paid_button_a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="Paid"
       />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

<!--

        <Button
            android:id="@+id/check_by_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Id" />
-->

        <Button

            android:padding="1dp"
            android:layout_margin="1.5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/Unpaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Un Paid" />
         <Button
             android:padding="1dp"
             android:layout_margin="1.5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/activeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Active" />

        <Button
            android:padding="1dp"
            android:layout_margin="1.5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inactive" />


    </LinearLayout>

    <ListView
        android:textAlignment="center"

        android:padding="1dp"
        android:layout_margin="1.5dp"
        android:id="@+id/check_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
